{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2017", "dom"],
    "outDir": "./lib/cjs",
    "sourceMap": true,
    "declaration": true,
    "pretty": true,
    "strict": true,
    "strictNullChecks": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitHelpers": true,
    "importHelpers": true
  },
  "files": ["./src/index.ts"]
}
