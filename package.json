{
  "name": "tudi",
  "version": "0.1.2",
  "description": "A 2D game engine for Pixi.js.",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "jsnext:main": "lib/esm/index.js",
  "types": "lib/esm/index.d.ts",
  "scripts": {
    "precommit": "lint-staged",
    "start": "tsc -m es6 --project config/tsconfig.json --outDir lib/esm -w",
    "clean": "rimraf ./lib",
    "build:umd": "webpack --config config/webpack.config.ts",
    "build:esm": "tsc -m es6 --project config/tsconfig.json --outDir lib/esm",
    "build:cjs": "tsc --project config/tsconfig.json",
    "build": "npm run clean && npm run build:umd && npm run build:esm && npm run build:cjs",
    "lint": "tslint --project config/tsconfig.json --type-check",
    "prettier": "prettier --parser typescript --no-semi --single-quote --trailing-comma es5 --write \"src/**/*.ts\"",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SodiePops/tudi.git"
  },
  "contributors": [
    {
      "name": "Ian J Sikes",
      "email": "ianjsikes@gmail.com"
    },
    {
      "name": "Enrique Piqueras"
    },
    {
      "name": "Owen Wolf",
      "email": "owen@gowolf.io"
    },
    {
      "name": "Avelina Kim",
      "email": "avelina@gmail.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SodiePops/tudi/issues"
  },
  "homepage": "https://github.com/SodiePops/tudi#readme",
  "lint-staged": {
    "src/**/*.ts": [
      "tslint --project config/tsconfig.json --type-check",
      "prettier --parser typescript --no-semi --single-quote --trailing-comma es5 --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  },
  "devDependencies": {
    "@types/howler": "^2.0.2",
    "@types/jest": "^19.2.2",
    "@types/node": "^8.0.2",
    "@types/pixi.js": "^4.4.3",
    "@types/webpack": "^3.0.0",
    "awesome-typescript-loader": "^3.1.3",
    "directory-named-webpack-plugin": "^2.1.0",
    "husky": "^0.13.3",
    "jest": "^19.0.2",
    "lint-staged": "^4.0.0",
    "prettier": "^1.4.4",
    "rimraf": "^2.6.1",
    "source-map-loader": "^0.2.1",
    "ts-jest": "^19.0.14",
    "ts-node": "^3.1.0",
    "tslint": "^5.4.3",
    "tslint-config-prettier": "^1.1.0",
    "typescript": "^2.2.2",
    "webpack": "^3.0.0"
  },
  "dependencies": {
    "@most/create": "^2.0.1",
    "tslib": "^1.6.1",
    "howler": "^2.0.3",
    "most": "^1.3.0",
    "most-subject": "^5.3.0",
    "pixi.js": "^4.5.0"
  }
}
